<?xml version="1.0"?>
<launch>

  <arg name="scan_topic" default="scan" />

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping">
    <rosparam>
      odom_frame: odom
      base_frame: base_link
      map_frame: map

      map_update_interval: 4 # Publish new map

      maxUrange: 24.5 # Should be just less than sensor range
      maxRange: 25.1 # Should be just greater than sensor range
      particles: 140 # Increased from 80


      # Update frequencies
      linearUpdate: 0.3
      angularUpdate: 0.5
      temporalUpdate: 2.0
      resampleThreshold: 0.5

      # Initial Map Size
      xmin: -50.0
      ymin: -50.0
      xmax: 50.0
      ymax: 50.0
      delta: 0.025

      # All default
      sigma: 0.05
      kernelSize: 1
      lstep: 0.05
      astep: 0.05
      iterations: 5
      lsigma: 0.075
      ogain: 3.0
      lskip: 0
      llsamplerange: 0.01
      llsamplestep: 0.01
      lasamplerange: 0.005
      lasamplestep: 0.005
      minimumScore: 500

      #Debug

      #output_timing: true
      pub_debug_output: false

    </rosparam>
    <remap from="scan" to="$(arg scan_topic)"/>
  </node>
</launch>
